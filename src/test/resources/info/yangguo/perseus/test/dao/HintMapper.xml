<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="info.yangguo.perseus.test.dao.HintMapper">
    <resultMap id="BaseResultMap" type="User">
        <id column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="birth_date" property="birthDate" jdbcType="INTEGER"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="inst" property="inst" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="selectOne_statement" parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
        where
        user_name = 'yangguo1'
        and
        password = 'yangguo'
    </select>

    <select id="selectOne_statement_parameter"
            parameterType="User"
            resultMap="BaseResultMap">
        select
        *
        from
        user
        where
        user_name = #{userName}
        and
        password = #{password}
    </select>


    <select id="selectList_statement" parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
    </select>

    <select id="selectList_statement_parameter"
            parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
        <where>
            <if test="userName!=null and userName!=''">
                user_name = #{userName}
            </if>
            <if test="password!=null and password!=''">
                and password = #{password}
            </if>
        </where>
    </select>

    <select id="selectList_statement_parameter_rowBounds"
            parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
    </select>


    <select id="selectMap_statement_mapKey"
            parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
    </select>
    <select id="selectMap_statement_parameter_mapKey"
            parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
        WHERE
        user_id>#{userId}
    </select>
    <select id="selectMap_statement_parameter_mapKey_rowBounds"
            parameterType="User"
            resultMap="BaseResultMap">
        /*master*/select
        *
        from
        user
        WHERE
        user_id>#{userId}
    </select>
</mapper>